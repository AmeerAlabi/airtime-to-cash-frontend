import { useState } from "react";
import { useNavigate } from "react-router-dom";

const EnterBankDetails = () => {
  const [phone, setPhone] = useState("");
  const [bankName, setBankName] = useState("");
  const [accountNumber, setAccountNumber] = useState("");
  const [error, setError] = useState("");
  const [loading, setLoading] = useState(false);
  const navigate = useNavigate();

  const handleSubmit = async () => {
    if (!phone || !bankName || !accountNumber) {
      setError("All fields are required!");
      return;
    }

    setLoading(true);
    setError("");

    console.log("ğŸ“¤ Sending bank details:", { phone, bankName, accountNumber }); // Debugging

    try {
      const response = await fetch("http://localhost:5000/api/enter-bank-details", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ phone, bankName, accountNumber }),
      });

      const data = await response.json();
      console.log("ğŸ“© Response from server:", data); // Debugging

      if (!response.ok) {
        throw new Error(data.message || "Failed to process payment.");
      }

      alert(data.message);
      navigate("/success");
    } catch (error) {
      console.error("âŒ Error submitting bank details:", error);
      setError(error.message);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-4">
      <div className="bg-white p-6 rounded-lg shadow-md w-full max-w-md">
        <h2 className="text-2xl font-bold text-center mb-4">Enter Bank Details</h2>
        <input
          type="tel"
          placeholder="Enter your phone number"
          value={phone}
          onChange={(e) => setPhone(e.target.value)}
          className="w-full p-2 border border-gray-300 rounded mt-2"
        />
        <input
          type="text"
          placeholder="Enter your bank name"
          value={bankName}
          onChange={(e) => setBankName(e.target.value)}
          className="w-full p-2 border border-gray-300 rounded mt-2"
        />
        <input
          type="number"
          placeholder="Enter your account number"
          value={accountNumber}
          onChange={(e) => setAccountNumber(e.target.value)}
          className="w-full p-2 border border-gray-300 rounded mt-2"
        />
        {error && <p className="text-red-500 text-sm mt-2">{error}</p>}
        <button
          onClick={handleSubmit}
          disabled={loading}
          className="w-full bg-blue-600 text-white p-2 mt-4 rounded hover:bg-blue-700 disabled:bg-gray-400"
        >
          {loading ? "Processing..." : "Submit Bank Details"}
        </button>
      </div>
    </div>
  );
};

export default EnterBankDetails;
